	\setlength{\tumbeamer@tmplen}{\widthof{#1}}%
	\addtolength{\tumbeamer@tmplen}{\heightof{#1}}%
	\setlength{\tumbeamer@tmplen}{.15\tumbeamer@tmplen}%
	\kern\tumbeamer@tmplen\phv@overline{\kern-\tumbeamer@tmplen#1}%
}

