	\setlength{\tumbeamer@tmplen}{\widthof{#1}}%
	\addtolength{\tumbeamer@tmplen}{\heightof{#1}}%
	\setlength{\tumbeamer@tmplen}{.1\tumbeamer@tmplen}%
	\kern\tumbeamer@tmplen\phv@hat{\kern-\tumbeamer@tmplen#1}%
}
